}

// 4. Sensor-Ãœberwachung
tracepoint:syscalls:sys_enter_ioctl
{
    $cmd = args->cmd;
    
    // Camera und Audio IOCTLs
    $sensor_ioctls = 0xc0185601, 0xc0185603, 0xc0045601, 0x4004530b;
    
    if ($cmd == $sensor_ioctls) {
        printf("ðŸ“¡ SENSOR_IOCTL| PID:%d %s [CMD:0x%x]\\n", 
