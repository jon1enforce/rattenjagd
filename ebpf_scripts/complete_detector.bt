// 2. Prozess-Ãœberwachung
tracepoint:syscalls:sys_enter_execve
{
    $filename = str(args->filename);
    
    // VerdÃ¤chtige Prozessnamen
    if (str($filename) ~= "rat" || 
        str($filename) ~= "trojan" ||
        str($filename) ~= "backdoor" ||
        str($filename) ~= "spy" ||
        str($filename) ~= "keylogger") {
        printf("âš ï¸ SUSPICIOUS_PROCESS| PID:%d -> EXEC:%s\\n", 
               pid, $filename);
